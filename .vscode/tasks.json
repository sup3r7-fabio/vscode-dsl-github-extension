{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "compile",
			"group": "build",
			"presentation": {
				"panel": "shared",
				"reveal": "silent"
			},
			"problemMatcher": "$tsc"
		},
		{
			"type": "npm",
			"script": "compile",
			"isBackground": true,
			"group": "build",
			"presentation": {
				"panel": "shared",
				"reveal": "silent"
			},
			"problemMatcher": "$tsc-watch"
		},
		{
			"type": "npm",
			"script": "test",
			"group": "test",
			"presentation": {
				"panel": "shared",
				"reveal": "always"
			},
			"dependsOn": "npm: compile"
		},
		{
			"type": "npm",
			"script": "test:manual",
			"group": "test",
			"presentation": {
				"panel": "shared",
				"reveal": "always"
			},
			"dependsOn": "npm: compile"
		},
		{
			"label": "Run Tests in Stable",
			"type": "shell",
			"command": "npm",
			"args": ["run", "test"],
			"group": "test",
			"presentation": {
				"panel": "shared",
				"reveal": "always"
			},
			"dependsOn": "npm: compile",
			"options": {
				"env": {
					"VSCODE_TEST_VERSION": "stable"
				}
			}
		},
		{
			"label": "Run Tests in Insiders", 
			"type": "shell",
			"command": "npm",
			"args": ["run", "test"],
			"group": "test",
			"presentation": {
				"panel": "shared",
				"reveal": "always"
			},
			"dependsOn": "npm: compile",
			"options": {
				"env": {
					"VSCODE_TEST_VERSION": "insiders"
				}
			}
		}
	]
}
